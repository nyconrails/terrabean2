!!!
%html
  %head
    %title #{yield :title} TerraBean Coffee
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'https://js.stripe.com/v1', 'application'
    %meta{:name => 'stripe-key', :content => STRIPE_PUBLIC_KEY }		  
    = csrf_meta_tag
    
  %body.application
    .header
      .container
        .headline= link_to 'TerraBean', root_path
        .tagline Directly from the farm to your cup
        .login_button
          = link_to 'Login', ''
      
    .main
      .container
        = yield