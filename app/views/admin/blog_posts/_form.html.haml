.form-horizontal
  = simple_form_for([:admin, @blog_post]) do |f|

    .form-inputs
      - %w( title content ).each do |k|
        .control-group
          = f.label k, class: 'control-label'
          .controls= f.input k, label: false

      .control-group
        = f.label :photo, class: 'control-label'
        .controls= f.input :photo, label: false, as: :file
      .control-group
        = f.label :caption, class: 'control-label'
        .controls= f.input :caption, label: false

      .control-group
        = f.label :photo_2, class: 'control-label'
        .controls= f.input :photo_2, label: false, as: :file
      .control-group
        = f.label :caption_2, class: 'control-label'
        .controls= f.input :caption_2, label: false

      .control-group
        = f.label :photo_3, class: 'control-label'
        .controls= f.input :photo_3, label: false, as: :file
      .control-group
        = f.label :caption_3, class: 'control-label'
        .controls= f.input :caption_3, label: false


      .control-group
        = f.label "Ready for display?", class: 'control-label'
        .controls= f.input :display, label: false
              
    .form-actions
      = f.button :submit, class: 'btn btn-success'

