!!!
%html
  %head
    %title #{yield :title} Terra Bean Coffee
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'https://js.stripe.com/v1', 'application'
    %meta{:name => 'stripe-key', :content => STRIPE_PUBLIC_KEY }
    %meta{:name => 'keywords', :content => 'coffee, coffee subscription, coffee of the month, coffee of the month club, direct trade, direct trade coffee, directly traded, fair trade, fair trade coffee, coffee gift, gift coffee, coffee farmer, seed to cup, sustainable, farm, farmer, monthly coffee subscription'}
    
    %meta{:name => 'description', :content => 'Terra Bean Coffee delivers directly traded coffee from the farm to your door'}
    
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-36145335-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    = csrf_meta_tag
    
  %body.application
    .header
      .container
        .headline= link_to 'Terra Bean Coffee', root_path
        .tagline Delivering directly traded coffee from the farm to your door
        .social
          %a.twitter-share-button.left{"data-count" => "horizontal", "data-via" => "Terra Bean Coffee", :href => "http://twitter.com/share"} Tweet
          %script{:src => "http://platform.twitter.com/widgets.js", :type => "text/javascript"}
          %script{:src => "http://connect.facebook.net/en_US/all.js#xfbml=1"}
          %fb:like{:layout => "button_count", :show_faces => "false", :width => "450"}
      
    .main
      .container
        = yield
        .footer
          %p Copyright 2012 Terra Bean Coffee, LLC. All Rights Reserved.
          %p If you have any questions, or would like to change or cancel your subscription, please send us an email: #{link_to 'info@terrabeancoffee.com', 'mailto:info@terrabeancoffee.com'}
          %p #{link_to 'Terms of Service', tos_path}